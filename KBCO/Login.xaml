						<ControlTemplate.Triggers>
							<EventTrigger RoutedEvent="Mouse.MouseEnter">
								<BeginStoryboard x:Name="loginBtnSB_BeginStoryboard" Storyboard="{StaticResource loginBtnSB}"/>
							</EventTrigger>
							<EventTrigger RoutedEvent="Mouse.MouseLeave">
								<StopStoryboard BeginStoryboardName="loginBtnSB_BeginStoryboard"/>
							</EventTrigger>
							<EventTrigger RoutedEvent="Keyboard.GotKeyboardFocus">
								<BeginStoryboard x:Name="loginBtnSB_BeginStoryboard1" Storyboard="{StaticResource loginBtnSB}"/>
							</EventTrigger>
							<EventTrigger RoutedEvent="Keyboard.LostKeyboardFocus">
								<StopStoryboard BeginStoryboardName="loginBtnSB_BeginStoryboard"/>
							</EventTrigger>
