								</Rectangle.Fill>
							</Rectangle>
							<Rectangle x:Name="rectangle1" Fill="#26FFFFFF" RadiusY="100" RadiusX="100" Stroke="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="17" Width="25"/>
