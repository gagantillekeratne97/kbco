			<Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="Padding" Value="1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<ControlTemplate.Resources>
							<Storyboard x:Key="loginBtnSB">
								<!--<ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[0].(GradientStop.Color)" Storyboard.TargetName="rectangle" RepeatBehavior="Forever">
									<EasingColorKeyFrame KeyTime="0:0:0.5" Value="#FFB6CDFB"/>
									<EasingColorKeyFrame KeyTime="0:0:1" Value="#FF89ACF1"/>
								</ColorAnimationUsingKeyFrames>
								<ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[1].(GradientStop.Color)" Storyboard.TargetName="rectangle" RepeatBehavior="Forever">
									<EasingColorKeyFrame KeyTime="0:0:0.5" Value="#FFB0C8F7"/>
									<EasingColorKeyFrame KeyTime="0:0:1" Value="#FF94B8FF"/>
								</ColorAnimationUsingKeyFrames>
								<ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[2].(GradientStop.Color)" Storyboard.TargetName="rectangle" RepeatBehavior="Forever">
									<EasingColorKeyFrame KeyTime="0:0:0.5" Value="#FF758AB2"/>
									<EasingColorKeyFrame KeyTime="0:0:1" Value="#FF1E62E9"/>
								</ColorAnimationUsingKeyFrames>-->
								<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)" Storyboard.TargetName="grid">
									<EasingDoubleKeyFrame KeyTime="0" Value="1"/>
								</DoubleAnimationUsingKeyFrames>
								<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" Storyboard.TargetName="grid">
									<EasingDoubleKeyFrame KeyTime="0" Value="18"/>
								</DoubleAnimationUsingKeyFrames>
							</Storyboard>
						</ControlTemplate.Resources>
						<Grid x:Name="grid">
							<Grid.Effect>
								<DropShadowEffect Color="#FF348AE9" BlurRadius="0" ShadowDepth="0"/>
							</Grid.Effect>
							<Rectangle x:Name="rectangle" Stroke="Black" RadiusY="4.5" RadiusX="4.5" Opacity="1">
								<Rectangle.Fill>
									<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
										<GradientStop Color="#FF89ACF1" Offset="0"/>
										<GradientStop Color="#FF94B8FF" Offset="1"/>
										<GradientStop Color="#FF1E62E9" Offset="0.4"/>
									</LinearGradientBrush>
								</Rectangle.Fill>
							</Rectangle>
							<Rectangle RadiusY="4.5" RadiusX="4.5" Stroke="{x:Null}" Fill="#19FFFFFF" Margin="0,0,0,17" Opacity="1"/>
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Grid>
						<ControlTemplate.Triggers>
							<EventTrigger RoutedEvent="Mouse.MouseEnter">
								<BeginStoryboard x:Name="loginBtnSB_BeginStoryboard" Storyboard="{StaticResource loginBtnSB}"/>
							</EventTrigger>
							<EventTrigger RoutedEvent="Mouse.MouseLeave">
								<StopStoryboard BeginStoryboardName="loginBtnSB_BeginStoryboard"/>
							</EventTrigger>
							<Trigger Property="IsKeyboardFocused" Value="True"/>
							<EventTrigger RoutedEvent="FrameworkElement.Loaded"/>
							<Trigger Property="ToggleButton.IsChecked" Value="true"/>
							<Trigger Property="IsEnabled" Value="false">
								<Setter Property="Foreground" Value="#ADADAD"/>
							</Trigger>
							<EventTrigger RoutedEvent="Keyboard.GotKeyboardFocus">
								<BeginStoryboard x:Name="loginBtnSB_BeginStoryboard1" Storyboard="{StaticResource loginBtnSB}"/>
							</EventTrigger>
							<EventTrigger RoutedEvent="Keyboard.LostKeyboardFocus">
								<StopStoryboard BeginStoryboardName="loginBtnSB_BeginStoryboard"/>
							</EventTrigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="profileInfoStackPanel" TargetType="StackPanel">
			<Setter Property="Width" Value="170"/>
			<Setter Property="Height" Value="170"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="Margin" Value="5,0,0,0"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>

		<Style x:Key="userProfBorders" TargetType="Border">
